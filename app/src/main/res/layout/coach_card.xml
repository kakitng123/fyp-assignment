<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".frontend.TrainingClassFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--            &lt;!&ndash; ImageVIew to display our Course Image &ndash;&gt;-->
            <!--            <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--                android:id="@+id/tvCoachImage"-->
            <!--                android:layout_width="96dp"-->
            <!--                android:layout_height="96dp"-->
            <!--                android:src="@drawable/smashlogo"-->
            <!--                app:civ_border_width="2dp"-->
            <!--                app:civ_border_color="#FF000000"/>-->

            <ImageView
                android:id="@+id/tvCoachImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/smashlogo" />

            <TextView
                android:id="@+id/tvCoachName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/tvCoachImage"
                android:text="coachName"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCoachID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCoachName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/tvCoachImage"
                android:drawablePadding="2dp"
                android:text="coachID" />

            <TextView
                android:id="@+id/tvCoachExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCoachID"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/tvCoachImage"
                android:drawablePadding="2dp"
                android:text="coachExperience" />

            <TextView
                android:id="@+id/tvCoachPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCoachExperience"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/tvCoachImage"
                android:drawablePadding="2dp"
                android:text="coachPhone" />

            <TextView
                android:id="@+id/tvCoachEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCoachPhone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tvCoachImage"
                android:drawablePadding="2dp"
                android:text="coachEmail" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

