<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".backend.AdminClassAddFragment">

        <TextView
            android:id="@+id/tvAddClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Add Training Class"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1.5"
                    android:gravity="center|end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddClassID"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="ID"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddClassName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddClassDesc"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Description"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddClassPrice"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Price"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddClassDate"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Date"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddClassTime"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Time"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfAddClassID"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Class ID"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddClassName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Class Name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddClassDesc"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Desc"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddClassPrice"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Price"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddClassDate"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Date"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddClassTime"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Time"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFinishAddClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
