<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".backend.AdminNotifManageFragment">

        <ImageButton
            android:id="@+id/imgBtnAddNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_circle"
            android:contentDescription="@string/add"
            app:layout_constraintEnd_toEndOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/cardView4"
            app:srcCompat="@drawable/ic_admin_add30"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tvAddNotif3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="ADD NOTIFICATION"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView4"
            app:layout_constraintStart_toStartOf="@+id/cardView4" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddNotifTitle"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:gravity="center|end"
                        android:text="Title"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAddNotifMsg"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:gravity="center|end"
                        android:text="Message"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAddNotifUser"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:gravity="center|end"
                        android:text="User"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfAddNotifTitle"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:hint="Enter Title"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddNotifMsg"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:hint="Enter Message"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddNotifUser"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="4dp"
                        android:hint="Enter User"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
