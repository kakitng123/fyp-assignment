<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".backend.CoachAddAdminFragment">

        <TextView
            android:id="@+id/tvAddCoach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Add Coach"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1.5"
                    android:gravity="center|end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddCoachID"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="ID"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddCoachName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddCoachEmail"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Email"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddCoachExp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Experience"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddCoachPhone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center|end"
                        android:text="Phone"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tfAddCoachID"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter ID"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddCoachName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddCoachEmail"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Email"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddCoachExp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Experience"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tfAddCoachPhone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="Enter Phone"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFinishAddCoach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
